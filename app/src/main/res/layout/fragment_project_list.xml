<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.project.ProjectListFragment"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="30dp"
            android:text="프로젝트 선택"
            android:textSize="@dimen/text_view_title_size_b"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_project_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mc_project_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:cardCornerRadius="17dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mc_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Data"
                    android:textSize="@dimen/project_list_title"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:gravity="center">
                </com.google.android.material.textview.MaterialTextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rc_project_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    tools:listitem="@layout/item_project"
                    app:layout_constraintStart_toStartOf="@+id/cl_project_list"
                    app:layout_constraintEnd_toEndOf="@+id/cl_project_list"
                    app:layout_constraintTop_toTopOf="@+id/cl_project_list"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_project_list">
                </androidx.recyclerview.widget.RecyclerView>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

