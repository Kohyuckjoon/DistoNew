                            android:maxLength="8">
                        </EditText>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mc_auto_btn"
                android:layout_width="@dimen/measurement_data_list_width_medium"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="10dp"
                app:strokeWidth="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/cl_info"
                app:layout_constraintTop_toBottomOf="@+id/cl_info">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/btn_survey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="측정"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_view_title_size_small_new"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mc_measure_result_fix"
                android:layout_width="@dimen/measurement_data_list_width_medium"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E9ECEF"
                app:cardCornerRadius="10dp"
                app:strokeWidth="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_info"
                app:layout_constraintEnd_toEndOf="@+id/cl_info">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mt_measure_result_fix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="확정"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_view_title_size_small_new"
                    android:textStyle="bold" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mc_distance"
                android:layout_width="@dimen/measurement_distance"
