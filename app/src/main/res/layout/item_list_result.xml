<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rc_view_list"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            style="@style/MeasurementList"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/cl_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_measurement_05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_manhol_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:background="@android:color/transparent"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:text="맨홀 타입 : "
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="RtlSymmetry">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_sheet_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7dp"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:text="도엽 번호 : "
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_manhol_type"
                            tools:ignore="RtlSymmetry">
                        </TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_delete_button"
                        android:layout_width="@dimen/measurement_data_list_width"
                        android:layout_height="@dimen/measurement_data_list_height"
                        app:strokeWidth="0dp"
                        app:cardCornerRadius="50dp"
                        app:cardBackgroundColor="@color/black"
                        android:layout_margin="10dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:layout_margin="4dp"
                            android:text="삭 제"
                            android:textSize="@dimen/btn_size_small"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/white">
                        </com.google.android.material.textview.MaterialTextView>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_number"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1" app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:text="횟수"
                            tools:ignore="RtlSymmetry">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_scenery"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1.5" app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_scenery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingEnd="15dp"
                            android:letterSpacing="-0.09"
                            android:text="측정 관경"
                            tools:ignore="RtlSymmetry">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_input"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1.5" app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_input"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingEnd="10dp"
                            android:text="입력"
                            tools:ignore="RtlSymmetry">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_pip"
                        android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1.3" app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_pip"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingEnd="10dp"
                            android:text="재질"
                            tools:ignore="RtlSymmetry">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_measurement_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_number_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_number_01"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="1">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_scenery_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.5"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_scenery_first"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_input_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.5"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_input_first"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_pip_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.3"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/et_pip_material_first"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_measurement_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_number_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_number_02"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="2">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_scenery_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.5"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_scenery_second"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_input_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.5"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_input_second"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_pip_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.3"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/et_pip_material_second"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_measurement_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_number_03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_number_03"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="3">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_scenery_03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.5"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_scenery_third"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_input_03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.5"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_input_third"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_pip_03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.3"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/et_pip_material_third"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_measurement_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_number_04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_number_04"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="4">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_scenery_04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.5"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_scenery_fourth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_input_04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.5"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tv_input_fourth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mc_pip_04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1.3"
                        app:cardBackgroundColor="#E9ECEF"
                        app:cardCornerRadius="10dp"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/et_pip_material_fourth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textColor="@color/black">
                        </TextView>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>