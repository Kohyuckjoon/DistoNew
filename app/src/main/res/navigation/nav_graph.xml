<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.terra.terradisto.ui.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_connectDisto"
            app:destination="@id/connectDisto" />
        <action
            android:id="@+id/action_mainFragment_to_surveyDiameterFragment"
            app:destination="@id/surveyDiameterFragment" />
        <action
            android:id="@+id/action_mainFragment_to_createProjectFragment"
            app:destination="@+id/proejectCreate" />
        <action
            android:id="@+id/action_mainFragment_to_projectListFragment"
            app:destination="@+id/projectList" />
        <action
            android:id="@+id/action_mainFragment_to_measurementListFragment"
            app:destination="@+id/measurement_list" />
    </fragment>

    <fragment
        android:id="@+id/connectDisto"
        android:name="com.terra.terradisto.ui.distoconnect.ConnectDistoFragment"
        android:label="@string/Disto_Connect"
        tools:layout="@layout/fragment_connect_disto" />

    <fragment
        android:id="@+id/measurement_list"
        android:name="com.terra.terradisto.ui.surveylist.MeasurementListFragment"
        android:label="@string/Disto_Connect"
        tools:layout="@layout/fragment_measurement_list" />

    <fragment
        android:id="@+id/surveyDiameterFragment"
        android:name="com.terra.terradisto.ui.survey_diameter.SurveyDiameterFragment"
        android:label="측정"
        tools:layout="@layout/fragment_survey_diameter">

        <action
            android:id="@+id/surveyDiameterComplite"
            app:destination="@+id/mainFragment"

            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true"/>

<!--        <action-->
<!--            android:id="@+id/fragmentSaveDialog"-->
<!--            app:destination="@+id/fragmentSaveDialog" />-->
    </fragment>

    <fragment
        android:id="@+id/fragmentSaveDialog"
        android:name="com.terra.terradisto.ui.popup.SaveDialogFragment"
        tools:layout="@layout/fragment_save_dialog" >

        <action
            android:id="@+id/fragmentSaveComplite"
            app:destination="@+id/fragmentSaveComplite" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSaveComplite"
        android:name="com.terra.terradisto.ui.popup.SaveCompliteFragment"
        tools:layout="@layout/fragment_save_complite">

        <action
            android:id="@+id/mainFragment"
            app:destination="@+id/mainFragment" />
    </fragment>




    <fragment android:id="@+id/proejectCreate"
        android:name="com.terra.terradisto.ui.project.ProjectCreateFragment"
        android:label="프로젝트 생성하기"
        tools:layout="@layout/fragment_project_create" />

    <fragment
        android:id="@+id/projectList"
        android:name="com.terra.terradisto.ui.project.ProjectListFragment"
        android:label="프로젝트 목록"
        tools:layout="@layout/fragment_project_list">
        <action
            android:id="@+id/action_projectList_to_mainFragment"
            app:destination="@+id/mainFragment"

            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>